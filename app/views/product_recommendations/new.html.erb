<div id="content_sub">
	<div id="content_spacer">
	<%= error_messages_for :product_recommendation %>

	<% form_for(@product_recommendation) do |f| %>
	<p>
	  <b>Category</b><br />
	  <%= f.select :category_id, @all_categories.collect{|c| [c.full_name,c.id]} %>
	</p>


	  <p>
	    <b>Product</b><br />
	    <%= f.select :product_id, @all_products.collect{|c| [c.name,c.id]} %>
	  </p>

	  <p>
	    <b>User</b><br />
	    <%= f.text_field :user_id %>
	  </p>

	  <p>
	    <%= f.submit "Create" %>
	  </p>
	<% end %>

	<%= link_to 'Back', product_recommendations_path %>

	</div>	
</div>

