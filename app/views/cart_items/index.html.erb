<h1>Listing cart_items</h1>

<table>
  <tr>
    <th>Product</th>
    <th>Order</th>
    <th>Quantity</th>
    <th>Total price</th>
  </tr>

<% for cart_item in @cart_items %>
  <tr>
    <td><%=h cart_item.product_id %></td>
    <td><%=h cart_item.order_id %></td>
    <td><%=h cart_item.quantity %></td>
    <td><%=h cart_item.total_price %></td>
    <td><%= link_to 'Show', cart_item %></td>
    <td><%= link_to 'Edit', edit_cart_item_path(cart_item) %></td>
    <td><%= link_to 'Destroy', cart_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New cart_item', new_cart_item_path %>
