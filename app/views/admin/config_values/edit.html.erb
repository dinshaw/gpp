<div id="content_sub">
	<div id="content_spacer">
		<h2>Editing Config Value</h2>
		<%= error_messages_for :config_value %>

		<% form_for(:config_value, :url => admin_config_value_path(@config_value), :html => { :method => :put} ) do |f| %>
		<p>
			<b>Name</b><br />
			<%= f.text_field :name %>
		</p>

		<p>
			<b>Value</b><br />
			<%= f.text_field :value %>
		</p>

		<p>
			<%= f.submit "Update" %>
		</p>
		<% end %>

		<%= link_to 'Show', admin_config_value_path(@config_value) %> |
		<%= link_to 'Back', admin_config_values_path %>

	</div>
</div>