<div id="content_sub">
	<div id="content_spacer">
		<h2>Photos for <%= link_to @product.name, product_path(@product) %></h2>

<table>
  <tr>
    <th>Filename</th>
  </tr>

<% for photo in @photos %>
  <tr>
    <td><%= image_tag( photo.public_filename(:thumb) ) %></td>
    <td><%= link_to 'Show', admin_product_photo_path(@product, photo), :class => :crd %></td>
    <td><%= link_to 'Edit', edit_admin_product_photo_path(@product,photo), :class => :crd %></td>
    <td><%= link_to 'Destroy', admin_product_photo_path(@product,photo), :confirm => 'Are you sure?', :method => :delete, :class => :crd %></td>
  </tr>
<% end %>
</table>

<br />

<p><%= link_to "New photo for #{@product.name}", new_admin_product_photo_path %></p>
</div>
</div>