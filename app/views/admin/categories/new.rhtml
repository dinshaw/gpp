<div id="content_sub">
	<div id="content_spacer">
		
		<h1>New category</h1>

<%= error_messages_for :category %>

<% form_for(:category, :url => admin_categories_path) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Parent</b><br />
      <%= f.collection_select :parent_id, @all_categories, :id, :name, :include_blank => :true %>
  </p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', admin_categories_path %>

</div></div>